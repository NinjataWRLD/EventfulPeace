@model RegisterUserForm

<div class="container mt-5">
    <div class="row d-flex justify-content-center align-items-center">
        <!-- Register as Individual -->
        <div class="col-md-5">
            <section class="register-section p-4 rounded shadow-sm">
                <h2 class="text-center text-success">Register as Individual</h2>
                <hr class="section-divider" />
                <form id="registerForm" method="post" asp-action="RegisterIndividual">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="IndividualModel.Username" class="form-control custom-input" placeholder="SomeOne123" />
                        <label asp-for="IndividualModel.Username">Username</label>
                        <span asp-validation-for="IndividualModel.Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="IndividualModel.Email" class="form-control custom-input" placeholder="name@example.com" />
                        <label asp-for="IndividualModel.Email">Email</label>
                        <span asp-validation-for="IndividualModel.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="IndividualModel.Password" type="password" class="form-control custom-input" placeholder="password" />
                        <label asp-for="IndividualModel.Password">Password</label>
                        <span asp-validation-for="IndividualModel.Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-custom">Register</button>
                </form>
            </section>
        </div>

        <!-- Register as Organization -->
        <div class="col-md-5">
            <section class="register-section p-4 rounded shadow-sm">
                <h2 class="text-center text-success">Register as Organization</h2>
                <hr class="section-divider" />
                <form id="registerForm" method="post" asp-action="RegisterOrganization">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="OrganizationModel.Username" class="form-control custom-input" placeholder="SomeOne123" />
                        <label asp-for="OrganizationModel.Username">Username</label>
                        <span asp-validation-for="OrganizationModel.Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="OrganizationModel.Email" class="form-control custom-input" placeholder="name@example.com" />
                        <label asp-for="OrganizationModel.Email">Email</label>
                        <span asp-validation-for="OrganizationModel.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="OrganizationModel.Password" type="password" class="form-control custom-input" placeholder="password" />
                        <label asp-for="OrganizationModel.Password">Password</label>
                        <span asp-validation-for="OrganizationModel.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="OrganizationModel.Phone" class="form-control custom-input" placeholder="phone" />
                        <label asp-for="OrganizationModel.Phone">Phone</label>
                        <span asp-validation-for="OrganizationModel.Phone" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-custom">Register</button>
                </form>
            </section>
        </div>
    </div>
</div>

<style>
    /* Container Styling */
    .register-section {
        background-color: #f8f9fa;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Input Styling */
    .custom-input {
        border: 2px solid #28a745;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

    .custom-input:focus {
        border-color: #1e7e34;
        box-shadow: 0px 0px 8px rgba(40, 167, 69, 0.5);
    }

    /* Button Styling */
    .btn-custom {
        background-color: #28a745;
        border: none;
        color: white;
        padding: 12px;
        border-radius: 8px;
        transition: 0.3s;
    }

    .btn-custom:hover {
        background-color: #1e7e34;
        transform: scale(1.02);
    }

    /* Section Divider */
    .section-divider {
        border-top: 2px solid #006400;
        margin-bottom: 20px;
    }
</style>

