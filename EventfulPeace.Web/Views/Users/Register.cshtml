@model RegisterUserForm
<div>
    <div class="row d-flex justify-content-around">
        <div class="col-md-5">
            <h1>Register as Individual</h1>
            <form id="registerForm" method="post" asp-action="RegisterIndividual">
                <hr />
                <div class="form-floating mb-3">
                    <input asp-for="IndividualModel.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="SomeOne123" />
                    <label asp-for="IndividualModel.Username">Username</label>
                    <span asp-validation-for="IndividualModel.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="IndividualModel.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="IndividualModel.Email">Email</label>
                    <span asp-validation-for="IndividualModel.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="IndividualModel.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="IndividualModel.Password">Password</label>
                    <span asp-validation-for="IndividualModel.Password" class="text-danger"></span>
                </div>
                <button id="registerIndividualSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
        <div class="col-md-5">
            <h1>Register as Organization</h1>
            <form id="registerForm" method="post" asp-action="RegisterOrganization">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="OrganizationModel.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="SomeOne123" />
                    <label asp-for="OrganizationModel.Username">Username</label>
                    <span asp-validation-for="OrganizationModel.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="OrganizationModel.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="OrganizationModel.Email">Email</label>
                    <span asp-validation-for="OrganizationModel.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="OrganizationModel.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="OrganizationModel.Password">Password</label>
                    <span asp-validation-for="OrganizationModel.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="OrganizationModel.Phone" class="form-control" autocomplete="phone" aria-required="true" placeholder="phone" />
                    <label asp-for="OrganizationModel.Phone">Phone</label>
                    <span asp-validation-for="OrganizationModel.Phone" class="text-danger"></span>
                </div>
                <button id="registerOrganizationSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
