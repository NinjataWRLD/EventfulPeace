@using EventfulPeace.Application.Events.GetAll
@model CreateEventForm

<div class="container__create-event">
    <div class="card-header text-center mb-4">
        <h4 class="text">Create an Event</h4>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter event name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <div class="w-50 me-2">
                <label asp-for="OccursAt" class="form-label"></label>
                <input asp-for="OccursAt" class="form-control" />
                <span asp-validation-for="OccursAt" class="text-danger"></span>
            </div>
            <div class="w-50 ms-2">
                <label asp-for="Image" class="form-label"></label>
                <input type="file" asp-for="Image" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="LocationId" class="form-label"></label>
            <select asp-for="LocationId" class="form-select" placeholder="Enter event name">
                <option value="@null" selected disabled>Select a region</option>
                @foreach (var location in Model.Locations)
                {
                    <option value="@location.Id">@location.Name</option>
                }
            </select>
            <span asp-validation-for="LocationId" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-custom">Create Event</button>
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/create-event.css" />
}