<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="loginDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle" style="font-size: 1.5rem;"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="loginDropdown">
            @if (User.GetAuthentication())
            {
                <li>
                    <form asp-controller="Users" asp-action="Logout">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li><a class="dropdown-item" asp-controller="Users" asp-action="Login">Login</a></li>
                <li><a class="dropdown-item" asp-controller="Users" asp-action="Register">Register</a></li>
            }
        </ul>
    </li>
</ul>
